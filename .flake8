[flake8]
ignore = E203, E266, E501, W503, F403, F401, E402, W291
max-line-length = 80
max-complexity = 10
application-import-names = hypermodern_python,tests
select = B,C,E,F,W,T4,B9
exclude =
    .git,
    .venv,
    node_modules,
    examples,
    waldiez_studio/files,
    .local,
    __pycache__,
    setup.py,
    build,
    dist
